<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="com.rfp.dvp.mydevices.UserRegistryActivity">

    <LinearLayout
        android:id="@+id/user_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/user_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/user_email_layout">

    <EditText
        android:id="@+id/user_password_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_first_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/user_password_layout">

        <EditText
            android:id="@+id/user_first_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_second_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_below="@+id/user_first_name_layout">

        <EditText
            android:id="@+id/user_second_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sobrenome"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/registry_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:layout_below="@+id/user_second_name_layout">
        <Button
            android:id="@+id/registry_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cadastrar"/>

    </LinearLayout>






</RelativeLayout>
